<%= form_with url: '/search', class: 'w-full max-w-screen-sm flex flex-col', method: :get do |form| %>
  <% plan_options = render(
    partial: 'partials/form_components/radio_card',
    locals: {
      form:,
      icon: {
        url: 'arcade_plan_icon.png',
        size: '40x40',
        alt: 'arcade plan icon'
      },
      name: 'plan',
      value: 'arcade',
      plan: {
        name: 'Arcade',
        price: '$90/yr',
        note: '2 months free'
      }
    }
  ) +
  render(
    partial: 'partials/form_components/radio_card',
    locals: {
      form:,
      icon: {
        url: 'pro_plan_icon.png',
        size: '40x40',
        alt: 'pro plan icon'
      },
      name: 'plan',
      value: 'pro',
      plan: {
        name: 'Pro',
        price: '$120/yr',
        note: '2 months free'
      }
    }
  ) +
  render(
    partial: 'partials/form_components/radio_card',
    locals: {
      form:,
      icon: {
        url: 'advanced_plan_icon.png',
        size: '40x40',
        alt: 'advanced plan icon'
      },
      name: 'plan',
      value: 'advanced',
      plan: {
        name: 'Advanced',
        price: '$200/yr',
        note: '2 months free'
      }
    }
  )%>

  <% frequence = render(
    partial: 'partials/form_components/toggle_button',
    locals: {
      form:,
      name: 'frequence',
      value: {
        left: 'Monthly',
        right: 'Yearly'
      }
    }
  )%>

  <% addons = render(
    partial: 'partials/form_components/check_card',
    locals: {
      form:,
      name: 'addon_online_service',
      value: 'arcade',
      addon: {
        name: 'Online service',
        price: '+$10/yr',
        note: 'Acces to multiplayer games'
      }
    }
  ) +
  render(
    partial: 'partials/form_components/check_card',
    locals: {
      form:,
      name: 'addon_large_storage',
      value: 'pro',
      addon: {
        name: 'Large storage',
        price: '+$20/yr',
        note: 'Extra 1TB of cloud save'
      }
    }
  ) +
  render(
    partial: 'partials/form_components/check_card',
    locals: {
      form:,
      name: 'addon_customizable_profile',
      value: 'advanced',
      addon: {
        name: 'Customizable profile',
        price: '+$20/yr',
        note: 'Custom theme on your profile'
      }
    }
  )%>

  <%= content_tag(
    :div,
    plan_options,
    class: '
      flex
      sm:flex-row flex-col
      sm:justify-between justify-around
      sm:gap-0 gap-5
    '
  )%>

  <%= content_tag(
    :div,
    frequence,
    class: 'grid grid-cols-1 min-w-full bg-dark-white rounded-lg p-5 mt-5 '
  )%>

  <%= content_tag(
    :div,
    addons,
    class: 'flex flex-col gap-4 min-w-full mt-5'
  )%>
<% end %>
