<%= form_with url: '/search', class: 'w-full max-w-screen-sm flex flex-col', method: :get do |form| %>
  <% plan_options = render(
    partial: 'partials/form_components/radio_card',
    locals: {
      form:,
      icon: {
        url: 'arcade_plan_icon.png',
        size: '40x40',
        alt: 'arcade plan icon'
      },
      name: 'plan',
      value: 'arcade',
      plan: {
        name: 'Arcade',
        price: '$90/yr',
        note: '2 months free'
      }
    }
  ) +
  render(
    partial: 'partials/form_components/radio_card',
    locals: {
      form:,
      icon: {
        url: 'pro_plan_icon.png',
        size: '40x40',
        alt: 'pro plan icon'
      },
      name: 'plan',
      value: 'pro',
      plan: {
        name: 'Pro',
        price: '$120/yr',
        note: '2 months free'
      }
    }
  ) +
  render(
    partial: 'partials/form_components/radio_card',
    locals: {
      form:,
      icon: {
        url: 'advanced_plan_icon.png',
        size: '40x40',
        alt: 'advanced plan icon'
      },
      name: 'plan',
      value: 'advanced',
      plan: {
        name: 'Advanced',
        price: '$200/yr',
        note: '2 months free'
      }
    }
  )%>

  <% frequence = render(
    partial: 'partials/form_components/toggle_button',
    locals: {
      form:,
      name: 'frequence',
      value: {
        left: 'Monthly',
        right: 'Yearly'
      }
    }
  )%>

  <%= content_tag(
    :div,
    plan_options,
    class: 'flex justify-around'
  )%>

  <%= content_tag(
    :div,
    frequence,
    class: 'grid grid-cols-1 min-w-full bg-dark-white rounded-lg p-5 mt-5 '
  )%>
<% end %>
