<div clas="flex gap-5 items-center w-full">
  <div class='
      text
      font-bold
      border
      rounded-full
      w-10
      h-10
      flex
      justify-center
      items-center
      <%= is_current_step ? 'text-purple' : 'text-white' %>
      <%= is_current_step ? 'border-purple' : 'border-white' %>
      <%= is_current_step ? 'bg-sky-blue' : 'bg-transparent' %>
    '>
    <%= number %>
  </div>

  <div clas="">
    <div clas="block text-soft-gray text-sm">
      <%= "STEP #{number}" %>
    </div>

    <div clas="block text-white text-lg font-bold">
      <%= title %>
    </div>
  </div>
</div>
