<%= content_tag(
  :div,
  content_tag(
    :div,
    number,
    class: "
      #{is_current_step ? 'text-purple' : 'text-white'}
      text-l
      font-bold
      border
      #{is_current_step ? 'border-purple' : 'border-white'}
      rounded-full
      w-10
      h-10
      flex
      justify-center
      items-center
      #{is_current_step ? 'bg-sky-blue' : 'bg-transparent'}
    "
  ) +
  content_tag(
    :div,
    content_tag(
      :span,
      "STEP #{number}",
      class: '
        block
        text-soft-gray
        text-sm
      '
    ) +
    content_tag(
      :span,
      title,
      class: '
        block
        text-white
        text-lg
        font-bold
      '
    ),
    class: ''
  ),
  class: '
    flex
    gap-5
    items-center
    w-full
  '
) %>