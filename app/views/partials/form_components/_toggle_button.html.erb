<div>
  <label
    for=<%= name.downcase %>
    class="inline-flex justify-center items-center w-full space-x-4 cursor-pointer"
  >
    <span class="text-soft-gray">
      <%= dispossed_values[:left] %>
    </span>
    <span class=<%= "relative #{checked ? 'text-soft-gray' : 'text-dark'}" %>>
      <%=
        form.check_box(
          "#{name.downcase}".to_sym,
          {
            class: "hidden peer",
            checked:,
            data:
          },
          dispossed_values[:left].downcase,
          dispossed_values[:right].downcase
        )
      %>
      <div class="w-10 h-6 rounded-full shadow-inner dark:bg-dark">
      </div>
      <div class="absolute
        inset-y-0
        left-0
        w-4
        h-4
        m-1
        rounded-full
        shadow
        peer-checked:right-0
        peer-checked:left-auto
        dark:bg-dark-white">
      </div>
    </span>
    <span class=<%= "#{checked ? 'text-dark' : 'text-soft-gray'}" %>>
      <%= dispossed_values[:right] %>
    </span>
  </label>
</div>
