<div>
  <label
    for=<%="account_plan_payment_recurrence_#{name}".downcase %>
    class="inline-flex justify-center items-center w-full space-x-4 cursor-pointer"
  >
    <span
      id=<%="#{id_prefix}_#{dispossed_values[:left]}"%>
      class=<%="#{checked ? 'text-soft-gray' : 'text-dark'}"%>>
        <%= dispossed_values[:left] %>
    </span>
    <span class="relative">
      <%=
        form.check_box(
          "#{name.downcase}".to_sym,
          {
            class: "hidden peer",
            checked:,
            data:
          },
          dispossed_values[:right].downcase,
          dispossed_values[:left].downcase
        )
      %>
      <div class="w-10 h-6 rounded-full shadow-inner dark:bg-dark"></div>
      <div class="
        absolute
        inset-y-0
        left-0
        w-4
        h-4
        m-1
        rounded-full
        shadow
        peer-checked:right-0
        peer-checked:left-auto
        dark:bg-dark-white
      ">
      </div>
    </span>
    <span
      id=<%="#{id_prefix}_#{dispossed_values[:right]}"%>
      class=<%="#{checked ? 'text-dark' : 'text-soft-gray'}"%>>
        <%= dispossed_values[:right] %>
    </span>
  </label>
</div>
