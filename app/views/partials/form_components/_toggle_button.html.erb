<% toggle = form.check_box(
    "#{name.downcase}".to_sym,
    {
      class: "hidden peer",
      checked:,
      data:
    },
    dispossed_values[:left].downcase,
    dispossed_values[:right].downcase
  ) +
  content_tag(
    :div,
    nil,
    class: '
      w-10
      h-6
      rounded-full
      shadow-inner
      dark:bg-dark
    '
  ) +
  content_tag(
    :div,
    nil,
    class: '
      absolute
      inset-y-0
      left-0
      w-4
      h-4
      m-1
      rounded-full
      shadow
      peer-checked:right-0
      peer-checked:left-auto
      dark:bg-dark-white
    '
  )
%>

<% card_content = content_tag(
    :span,
    dispossed_values[:left],
    class: 'text-soft-gray'
  ) +
  content_tag(
    :span,
    toggle,
    class: "relative #{checked ? 'text-soft-gray' : 'text-dark'}"
  ) +
  content_tag(
    :span,
    dispossed_values[:right],
    class: "#{checked ? 'text-dark' : 'text-soft-gray'}"
  )
%>

<div>
  <%= form.label(
    "#{name.downcase}".to_sym,
    card_content,
    class: '
      inline-flex
      justify-center
      items-center
      w-full
      space-x-4
      cursor-pointer
    '
  ) %>
</div>
