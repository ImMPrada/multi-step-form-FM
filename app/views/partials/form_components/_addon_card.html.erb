<div>
  <%= form.radio_button(
    "#{name}".downcase.to_sym,
    "#{value}_#{plan[:frequence_unit]}".downcase.to_sym,
    {
      class: 'hidden hidden-radio-for-card',
      checked:
    }
  )%>
  <label class="flex
      sm:flex-col flex-row
      sm:justify-between justify-start
      sm:gap-0 gap-5
      sm:w-36 w-full
      sm:h-44
      p-5
      border
      border-soft-gray
      rounded-lg
      cursor-pointer
      hover:border-purple"
  >
    <div class="w-10 h-10">
      <%= image_tag(icon[:url], size: icon[:size], alt: icon[:alt]) %>
    </div>
    <div class="flex flex-col">
      <div class="text-base font-bold">
      <%= plan[:name] %>
      </div>
      <div class="text-sm mt-2 text-soft-gray">
        <%= plan[:price] %>
      </div>
      <div class=<%= "text-xs mt-1.5 #{'hidden' unless plan[:note]}" %>>
        <%= plan[:note] %>
      </div>
    </div>
  </label>
</div>
