<% toggle = form.check_box(
    "#{name.downcase}".to_sym,
    {class: "hidden peer"},
    value[:left].downcase,
    value[:right].downcase
  ) +
  content_tag(
    :div,
    nil,
    class: '
      w-10
      h-6
      rounded-full
      shadow-inner
      dark:bg-dark
    '
  ) +
  content_tag(
    :div,
    nil,
    class: '
      absolute
      inset-y-0
      left-0
      w-4
      h-4
      m-1
      rounded-full
      shadow
      peer-checked:right-0
      peer-checked:left-auto
      dark:bg-dark-white
    '
  )
%>

<% card_content = content_tag(
    :span,
    value[:left],
    class: 'text-soft-gray'
  ) +
  content_tag(
    :span,
    toggle,
    class: 'relative'
  ) +
  content_tag(
    :span,
    value[:right],
    class: 'text-dark'
  )
%>

<div>
  <%= form.label(
    "#{name.downcase}".to_sym,
    card_content,
    class: '
      inline-flex
      items-center
      w-full
      space-x-4
      cursor-pointer
    '
  ) %>
</div>
